/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f5f5f5;
  font-family: "Microsoft YaHei" ! important;
} 
.search-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  width:85%;
  line-height: 1;
  padding:10rpx 20rpx;
  border-radius: 10rpx;
  margin:30rpx auto;
  background-color: #ffffff;
}
.search-box input{
  width:95%;
  font-family: "Microsoft YaHei" ! important;
  padding-left: 20rpx;
  font-size: 24rpx;
  color:#999999;
}
.input-placeholder{
  font-family: "Microsoft YaHei" ! important;
  font-size: 24rpx;
  color:#999999;
}
.list{
  display: flex;
  flex-direction: column;
  width: 100%
}
.flex-row{
  display: flex;
  flex-direction: row;
  width: 100%
}
.flex-right{
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content:flex-end;
}
.list .item-box{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  width: 94%;
  height: 100rpx;
  border-bottom:1px solid #cccccc;
  padding:1% 3%;
}
.list .item-box:last-child{
  border:none;
}
.list .item-box image{
  width:80rpx;
  height: 80rpx;
  display: inline-block;
  margin:10rpx;
}
.list .item-box .text-infor{
  margin:0rpx 10rpx;
  display: flex;
  flex-direction: column;
  height: 120rpx;
  width: 80%;
  font-size:28rpx;
}
.hide{
  visibility: hidden;
}
.flag{
  width: 76rpx;
  height: 36rpx;
  background-color: #ff0000;
  color:#ffffff;
  margin:30rpx 10rpx 0rpx 0rpx;
  padding:0rpx;
  text-align: center;
  font-size:24rpx;
  border-radius: 32rpx;
}
.login-btn{
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    font-size:36rpx;
    color:#ffffff;
    margin:20rpx auto 10rpx auto;
    background-color: #3f88e1;
}
.flag image{
  width: 76rpx;
  height:32rpx;
  margin-top:20rpx;
}
.text-infor .text-name{
   width: 100%;
   margin:6rpx 0rpx;
   color:#999999;
}
.text-infor .text-num{
   width: 100%;
   color:#cccccc;
}
.list .item-title{
  width:100%;
  text-indent: 10px;
  height: 40rpx;
  line-height: 40rpx;
  font-size:36rpx;
  padding:6rpx 0rpx;
  color:#999999;
}
.user-infor{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.list .user-item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
  line-height: 1;
  padding:15rpx 0rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #cccccc;
  font-family: "Microsoft YaHei" ! important;
}
.list .user-item:last-child{
  border: none;
}
.blue-text{
    font-family: "Microsoft YaHei";
    font-size: 28rpx;
    text-decoration: underline;
    color:#3f88e1;
}
.bluet{
    font-family: "Microsoft YaHei";
    font-size: 28rpx;
    color:#3f88e1;
}
.yellow-text{
  font-family: "Microsoft YaHei";
  font-size: 28rpx;
  line-height: 60rpx;
  color:#fea70f;
}
.black-text{
  width: 40%;
  text-align: left;
  line-height: 60rpx;
  color:#666666;
  font-size:28rpx;
  padding-left: 5%;
}
.gray-text{
  color:#ccc;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: right;
}
.width-big{
  width: 92%;
}
.pres-text{
  text-align: left;
  line-height: 60rpx;
  color:#666666;
  font-size:28rpx;
  padding-left: 5%;
}
.width-half{
  width: 50%;
  padding-right: 5%;
  text-align: right;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.icon-go{
  display: inline-block;
  height: 50rpx;
  font-size: 40rpx;
  font-weight: bolder;
  color:#cccccc;
  text-align: right;
  margin-top:10rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
}
.icon-num{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  font-size: 40rpx;
  color:#666666;
  margin-bottom:10rpx;
  text-align: center;
  border:1px solid #cccccc;
}
.numText{
  display: inline-block;
  width:80rpx;
  height: 50rpx;
  color:#666666;
  font-size:28rpx;
  line-height: 50rpx;
  border-top:1px solid #cccccc;
  border-bottom:1px solid #cccccc;
  text-align: center;
}
.text-title{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-indent: 30rpx;
}
.add-mini{
  color: #3f88e1;
  background-color: #ffffff;
  border:1px solid #3f88e1;
}
.paddingrt{
  padding-right: 20rpx;
}
.marginbt{
  margin-bottom: 40rpx;
}
.modelPage{
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modelPage .modelBody{
  width: 90vw;
  height: 200rpx;
  background: #ffffff;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center
}
.modelPage .modelBody .modelContent{
  padding: 40rpx 0;
  box-sizing: content-box;
}
.modelPage .modelBody .modelBtn{
  width: 100%
}
.modelPage .modelBody .btnOk{
  background-color: #3f88e1;
  color: #ffffff
}
.times{
  width:95%;
  font-size:28rpx;
  color:#cccccc;
}
.picker{
  line-height: 60rpx;
}
.little-text{
  font-size:24rpx;
  color:#cccccc;
}
.saveView{
  width: 100%;
  margin:40rpx auto;
}