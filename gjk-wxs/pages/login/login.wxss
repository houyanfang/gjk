/* pages/login/index.wxss */
.form-box{
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background-color:#fff;
    margin-top: 30rpx
}
.form-box form{
    display: flex;
    flex-direction: column;
}
.form-box input{
    border-left: none;
    border-top: none;
    border-right: none;
    margin:20rpx auto;
    width: 90%;
    font-family: "Microsoft YaHei";
    font-size: 28rpx;
    color:#ccc;
    border-bottom: 2rpx solid #ccc;
    margin-top: 40rpx;
    padding-bottom: 10rpx;
    padding-left: 10rpx
}
.form-box .user-input{
  font-family: "Microsoft YaHei" ! important;
  font-size: 28rpx;
  color:#ccc;
}
.login-btn{
    width: 90%;
    height: 100rpx;
    line-height: 100rpx;
    color:#fff;
    margin:70rpx auto 20rpx;
    background-color: #3f88e1;
    font-size: 40rpx
}
.agree{
    width: 70%;
    position: absolute;
    bottom: 0;
    left: 15%;
    margin:60rpx auto;
    display: flex;
    align-items: center;
    justify-content: center
}
.checkbox{
    font-size: 28rpx;
    font-family: "Microsoft YaHei";
}
.mindPw{
    margin: 10px auto;
    width: 90%
}
.mindPw .blue-text{
    text-decoration: none
}
