.upload-panel{
    display: flex;
    flex-direction: row;
    width: 94%;
    padding:3%;
    background-color: #fff;
}
.upload-preview{
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    background-color: #ccc;
}
.upload-preview image{
    display: inline-block;
    width: 100%;
    height: 100%;
}
.upload-btn{
    width: 114rpx;
    height: 114rpx;
    border-radius: 10rpx;
    border:2px solid #ccc;
    color:#ccc;
    font-size:110rpx;
    line-height:96rpx;
    text-align: center;
    margin-left: 30rpx;
}
.preview-panel{
    width: 94%;
    padding:3%;
    position: absolute;
    top: 0;
    left: 0;
    background-color: #fff; 
}